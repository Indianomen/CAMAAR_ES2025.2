<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @template.nome %></h1>
    <div>
      <% if current_user.is_a?(Administrador) && @template.administrador == current_user %>
        <%# CHANGE THIS: %>
        <%= link_to 'Editar', edit_admin_template_path(@template), class: 'btn btn-warning' %>
      <% end %>
      <%# CHANGE THIS: templates_path → admin_templates_path %>
      <%= link_to 'Voltar', admin_templates_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0">Informações do Template</h5>
    </div>
    <div class="card-body">
      <p><strong>Criado por:</strong> <%= @template.administrador.nome %></p>
      <p><strong>Criado em:</strong> <%= l(@template.created_at, format: :long) %></p>
      <p><strong>Última atualização:</strong> <%= l(@template.updated_at, format: :long) %></p>
    </div>
  </div>

  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">Perguntas (<%= @perguntas.count %>)</h5>
      <% if current_user.is_a?(Administrador) && @template.administrador == current_user %>
        <%# CHANGE THIS: %>
        <%= link_to 'Adicionar Pergunta', edit_admin_template_path(@template), class: 'btn btn-sm btn-primary' %>
      <% end %>
    </div>
    <div class="card-body">
      <% if @perguntas.any? %>
        <ol class="list-group list-group-numbered">
          <% @perguntas.each_with_index do |pergunta, index| %>
            <li class="list-group-item">
              <div class="fw-bold"><%= pergunta.texto %></div>
            </li>
          <% end %>
        </ol>
      <% else %>
        <p class="text-muted">Este template ainda não possui perguntas.</p>
      <% end %>
    </div>
  </div>

  <% if current_user.is_a?(Administrador) && @template.administrador == current_user %>
    <div class="mt-4">
      <%# You'll need to create this route later for forms %>
      <%= link_to 'Usar este template para criar formulário', '#', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>