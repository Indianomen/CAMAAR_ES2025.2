<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Templates de Formul√°rio</h1>
    <% if current_user.is_a?(Administrador) %>
      <%= link_to 'Novo Template', new_admin_template_path, class: 'btn btn-primary' %>
    <% end %>
  </div>

  <% if @templates.any? %>
    <div class="row">
      <% @templates.each do |template| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= template.nome %></h5>
              <p class="card-text">
                <small class="text-muted">
                  <%= template.perguntas.count %> perguntas<br>
                  Criado por: <%= template.administrador.nome %><br>
                  Criado em: <%= l(template.created_at, format: :short) %>
                </small>
              </p>
            </div>
            <div class="card-footer">
              <%= link_to 'Ver', admin_template_path(template), class: 'btn btn-sm btn-outline-primary' %>
              <% if current_user.is_a?(Administrador) && template.administrador == current_user %>
                <%= link_to 'Editar', edit_admin_template_path(template), class: 'btn btn-sm btn-outline-secondary' %>
                <%= link_to 'Excluir', admin_template_path(template), 
                      method: :delete, 
                      data: { confirm: 'Tem certeza?' },
                      class: 'btn btn-sm btn-outline-danger' %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      Nenhum template criado ainda.
      <% if current_user.is_a?(Administrador) %>
        <%= link_to 'Criar primeiro template', new_admin_template_path %>
      <% end %>
    </div>
  <% end %>
</div>