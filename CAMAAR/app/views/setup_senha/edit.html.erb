<div class="container">
  <h2>Definir Senha de Acesso</h2>
  <p>OlÃ¡, <%= @user.nome %>. Defina sua senha para ativar sua conta.</p>

  <%# Note que a URL aponta para o update com o token %>
  <%= form_with(model: @user, url: password_setup_path(token: params[:token]), method: :patch, local: true) do |f| %>
    
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :password, "Nova Senha" %>
      <%= f.password_field :password, required: true, minlength: 6 %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirmar Senha" %>
      <%= f.password_field :password_confirmation, required: true %>
    </div>

    <div class="actions">
      <%= f.submit "Criar Senha e Ativar Conta", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>