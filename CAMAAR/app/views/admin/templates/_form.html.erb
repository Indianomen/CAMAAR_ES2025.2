<%= form_with(model: [:admin, @template], id: 'template-form', data: { controller: 'questions' }) do |form| %>
  <% if @template.errors.any? %>
    <div class="alert alert-error">
      <h3><%= pluralize(@template.errors.count, "erro") %> impediram este template de ser salvo:</h3>
      <ul>
        <% @template.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nome, "Nome do Template*" %>
    <%= form.text_field :nome, 
          class: 'form-control',
          placeholder: 'Ex: Avaliação de Desempenho - Semestre 2024/1',
          required: true %>
    <small class="form-text">Dê um nome descritivo para identificar este template</small>
  </div>

  <div class="form-group">
    <h3>Perguntas</h3>
    <small class="form-text">Adicione as questões que farão parte deste template</small>
    
    <div id="perguntas-container" data-questions-target="container">
      <%# Calculate starting index for new questions %>
      <% existing_count = @template.perguntas.select(&:persisted?).count %>
      <% new_question_index = existing_count %>
      
      <%= form.fields_for :perguntas do |pergunta_fields| %>
        <div class="pergunta-field" data-persisted="<%= pergunta_fields.object.persisted? %>">
          <div class="pergunta-header">
            <% if pergunta_fields.object.persisted? %>
              <%= pergunta_fields.label :texto, "Pergunta ##{pergunta_fields.index + 1}" %>
              <div class="remove-existing">
                <%= pergunta_fields.check_box :_destroy %>
                <%= pergunta_fields.label :_destroy, "Marcar para remover" %>
              </div>
            <% else %>
              <label>Nova Pergunta</label>
              <button type="button" class="remove-new-question" data-action="click->questions#remove">
                × Remover
              </button>
            <% end %>
          </div>
          <%= pergunta_fields.text_area :texto, 
                rows: 2,
                class: 'form-control question-text',
                placeholder: 'Digite o texto da pergunta...',
                data: { "questions-target": "questionText" } %>
          <%= pergunta_fields.hidden_field :id if pergunta_fields.object.persisted? %>
        </div>
      <% end %>
    </div>
    
    <%= button_tag type: 'button', 
        id: 'add-question',
        class: 'btn btn-outline',
        data: { action: 'click->questions#add' } do %>
      + Adicionar nova pergunta
    <% end %>
    
    <%# Hidden field to track next index %>
    <%= hidden_field_tag 'next_question_index', new_question_index, 
          id: 'next-question-index',
          data: { "questions-target": "index" } %>
  </div>

  <div class="form-actions">
    <%= form.submit @template.persisted? ? 'Atualizar Template' : 'Criar Template', 
          class: 'btn btn-primary',
          id: 'submit-btn' %>
    <%= link_to 'Cancelar', admin_templates_path, 
          class: 'btn btn-outline' %>
  </div>
<% end %>

<style>
  .form-group {
    margin-bottom: 2rem;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: bold;
    color: #333;
  }
  
  .form-control {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 1rem;
    transition: border-color 0.2s;
  }
  
  .form-control:focus {
    outline: none;
    border-color: #007bff;
    box-shadow: 0 0 0 2px rgba(0,123,255,0.25);
  }
  
  .pergunta-field {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 6px;
    border: 1px solid #e9ecef;
    transition: all 0.3s ease;
  }
  
  .pergunta-field:hover {
    border-color: #007bff;
    box-shadow: 0 2px 8px rgba(0,123,255,0.1);
  }
  
  .pergunta-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }
  
  .pergunta-header label {
    margin-bottom: 0;
    font-weight: 600;
    font-size: 1rem;
  }
  
  .remove-new-question {
    background: #dc3545;
    color: white;
    border: none;
    padding: 6px 12px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.875rem;
    transition: background-color 0.2s;
  }
  
  .remove-new-question:hover {
    background: #c82333;
  }
  
  .remove-existing {
    font-size: 0.875rem;
    color: #666;
  }
  
  .remove-existing input[type="checkbox"] {
    margin-right: 5px;
    cursor: pointer;
  }
  
  .remove-existing label {
    cursor: pointer;
    color: #dc3545;
  }
  
  .alert-error {
    background: #f8d7da;
    color: #721c24;
    padding: 1rem;
    border-radius: 4px;
    border: 1px solid #f5c6cb;
    margin-bottom: 1.5rem;
  }
  
  .alert-error h3 {
    margin-top: 0;
    font-size: 1rem;
  }
  
  .alert-error ul {
    margin: 0.5rem 0 0 1.5rem;
    padding: 0;
  }
  
  .form-actions {
    display: flex;
    gap: 0.75rem;
    padding-top: 1.5rem;
    border-top: 1px solid #eee;
    margin-top: 2rem;
  }
  
  .btn {
    padding: 0.625rem 1.25rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    cursor: pointer;
    border: 1px solid transparent;
    transition: all 0.2s;
    font-size: 1rem;
  }
  
  .btn-primary {
    background: #007bff;
    color: white;
    border-color: #007bff;
  }
  
  .btn-primary:hover {
    background: #0056b3;
    border-color: #0056b3;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(0,123,255,0.2);
  }
  
  .btn-outline {
    background: transparent;
    color: #6c757d;
    border: 1px solid #6c757d;
    padding: 0.625rem 1.25rem;
    border-radius: 4px;
  }
  
  .btn-outline:hover {
    background: #6c757d;
    color: white;
    transform: translateY(-1px);
  }
  
  #add-question {
    margin-top: 1rem;
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }
</style>

<%= javascript_include_tag "controllers/templates_controller", type: "module" %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const addButton = document.getElementById('add-question');
    const container = document.getElementById('perguntas-container');
    
    if (addButton && container) {
      addButton.addEventListener('click', function() {
        const questionCount = container.querySelectorAll('.pergunta-field').length;
        
        const html = `
          <div class="pergunta-field" data-persisted="false">
            <div class="pergunta-header">
              <label>Nova Pergunta</label>
              <button type="button" class="remove-new-question" onclick="this.closest('.pergunta-field').remove()">
                × Remover
              </button>
            </div>
            <textarea 
              name="template[perguntas_attributes][${questionCount}][texto]" 
              rows="2"
              class="form-control question-text"
              placeholder="Digite o texto da pergunta..."></textarea>
            <input type="hidden" name="template[perguntas_attributes][${questionCount}][id]" value="">
          </div>
        `;
        
        container.insertAdjacentHTML('beforeend', html);
      });
    }
  });
</script>