
<style>
form.button {
  margin: 0;
  padding: 0;
  border: 0;
  background: transparent;
}

.button {
  display: block;
  width: 100%;
  margin: 15px 0;
  padding: 12px;
  background: #1ac94a;
  color: #fff;
  border-radius: 6px;
  text-align: center;
  text-decoration: none;

  appearance: none;
  -webkit-appearance: none;

  border: none;
  cursor: pointer;
  font: inherit;
  line-height: 1.2;
}

a.button {
  display: block;
}

form.button > button,
form.button > input[type="submit"] {
  display: block;
  width: 100%;
  margin: 15px 0;
  padding: 12px;
  background: #1ac94a;
  color: #fff;
  border-radius: 6px;
  border: none;
  text-align: center;
  cursor: pointer;
  text-decoration: none;
  font: inherit;
  line-height: 1.2;
  appearance: none;
  -webkit-appearance: none;
}

a.button:hover,
form.button > button:hover,
form.button > input[type="submit"]:hover {
  filter: brightness(0.95);
}

a.button:active,
form.button > button:active,
form.button > input[type="submit"]:active {
  transform: translateY(1px);
}

a.button:focus,
form.button > button:focus,
form.button > input[type="submit"]:focus {
  outline: 2px solid #0b7a2e;
  outline-offset: 2px;
}

.button--primary   { background: #1ac94a; } /* verde */
.button--secondary { background: #0d6efd; } /* azul */
.button--warning   { background: #f39c12; } /* laranja */
.button--danger    { background: #e74c3c; } /* vermelho */

form.button.button--primary   > button,
form.button.button--primary   > input[type="submit"] { background: #1ac94a; }

form.button.button--secondary > button,
form.button.button--secondary > input[type="submit"] { background: #0d6efd; }

form.button.button--warning   > button,
form.button.button--warning   > input[type="submit"] { background: #f39c12; }

form.button.button--danger    > button,
form.button.button--danger    > input[type="submit"] { background: #e74c3c; }
</style>

<div style="
  width: 400px;
  margin: 0 auto;
  padding: 40px;
  background: white;
  border-radius: 10px;
  text-align: center;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
">
  <h2>Painel Administrativo</h2>

  <div style="display: flex; gap: 15px; margin: 20px 0; justify-content: center;">
    <div style="
      flex: 1;
      padding: 20px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      border-radius: 8px;
      color: white;
      text-align: center;
    ">
      <div style="font-size: 32px; font-weight: bold;"><%= @total_templates %></div>
      <div style="font-size: 14px; opacity: 0.9;">Templates Criados</div>
    </div>
    
    <div style="
      flex: 1;
      padding: 20px;
      background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
      border-radius: 8px;
      color: white;
      text-align: center;
    ">
      <div style="font-size: 32px; font-weight: bold;"><%= @total_formularios %></div>
      <div style="font-size: 14px; opacity: 0.9;">Avaliações Criadas</div>
    </div>
  </div>

  <%= button_to "Importar Dados",
        admin_importacoes_path,
        method: :post,
        form: {
          class: "button button--primary",
          data: { turbo: false },
          id: "btn-importar-form"
        },
        class: "button button--primary"
  %>

  <%= link_to "Templates", admin_templates_path, 
        class: "button button--secondary" %>

  <%= link_to "Formulários", admin_formularios_path, 
        class: "button" %>

</div>
