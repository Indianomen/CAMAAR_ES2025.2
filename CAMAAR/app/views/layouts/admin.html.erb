<!DOCTYPE html>
<html>
<head>
  <title>CAMAAR - Painel Administrativo</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  
  <style>
    .admin-header {
      background-color: #0066cc;
      color: white;
      padding: 15px 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    
    .admin-header h1 {
      margin: 0;
      font-size: 24px;
    }
    
    .admin-user-info {
      display: flex;
      align-items: center;
      gap: 15px;
    }
    
    .admin-user-name {
      font-size: 14px;
      font-weight: bold;
    }
    
    .logout-button {
      display: flex;
      align-items: center;
      gap: 8px;
      background-color: rgba(255,255,255,0.2);
      color: white;
      padding: 8px 16px;
      border: 1px solid rgba(255,255,255,0.3);
      border-radius: 4px;
      text-decoration: none;
      font-size: 14px;
      transition: background-color 0.2s;
    }
    
    .logout-button:hover {
      background-color: rgba(255,255,255,0.3);
      color: white;
    }
    
    .logout-icon {
      font-size: 16px;
    }
    :root {
      --main-orange: #f57c00;
      --hover-orange: #e96e00;
      --sidebar-bg: #ffffff;
      --sidebar-shadow: rgba(0,0,0,0.12);
      --text-dark: #2f2f2f;
    }

    html, body { height: 100%; }
    body {
      margin: 0;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      background: #f4f4f6;
      overflow-x: hidden;
    }

    .topbar {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 64px;
      background: var(--main-orange);
      color: white;
      display: flex;
      align-items: center;
      gap: 18px;
      padding: 0 18px;
      z-index: 3000;
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
    }

    .menu-area {
      display: flex;
      align-items: center;
      background: transparent;
      border: none;
      cursor: pointer;
      padding: 8px;
      border-radius: 8px;
      line-height: 0;
      user-select: none;
      color: inherit;
    }
    .menu-area:hover { background: rgba(255,255,255,0.12); }
    .menu-area:focus-visible {
      outline: 2px solid #fff;
      outline-offset: 2px;
    }

    .menu-icon { font-size: 24px; }

    .topbar-title {
      font-size: 18px;
      font-weight: 700;
      flex: 1;
      text-align: center;
      margin-right: 36px;
    }

    .topbar-right {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .avatar {
      background: rgba(255,255,255,0.12);
      color: white;
      width: 36px;
      height: 36px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
    }

    .sidebar {
      position: fixed;
      top: 64px;
      left: -220px;
      width: 220px;
      height: calc(100vh - 64px);
      background: var(--sidebar-bg);
      box-shadow: 4px 0 14px var(--sidebar-shadow);
      padding-top: 20px;
      transition: left 220ms ease;
      z-index: 2500;
    }
    .sidebar.is-open {
      left: 0;
    }

    .sidebar a {
      display: block;
      padding: 12px 20px;
      color: var(--text-dark);
      font-weight: 600;
      text-decoration: none;
      transition: background 180ms, color 180ms;
      border-left: 4px solid transparent;
    }
    .sidebar a:hover,
    .sidebar a.active {
      background: var(--main-orange);
      color: white;
      border-left-color: rgba(0,0,0,0.06);
    }

    .sidebar hr { border: none; border-top: 1px solid #eee; margin: 12px 0; }

    .page-wrap {
      padding-top: 84px;
      display: flex;
      justify-content: center;
      min-height: calc(100vh - 84px);
    }

    .content-inner {
      width: 86%;
      max-width: 1100px;
      margin: 18px 0;
      background: white;
      border-radius: 12px;
      padding: 36px;
      box-shadow: 0 6px 18px rgba(16,24,40,0.06);
    }

    @media (max-width: 900px) {
      .content-inner { width: 94%; padding: 24px; }
      .topbar-title { font-size: 16px; margin-right: 8px; }
      .avatar { width: 32px; height: 32px; }
    }
  </style>
</head>
<body>

  <div class="topbar">
    <% if current_administrador %>
      <button id="menuTrigger"
              class="menu-area"
              type="button"
              title="Abrir menu"
              aria-label="Abrir menu"
              aria-expanded="false"
              aria-controls="adminSidebar">
        <div class="menu-icon" aria-hidden="true">&#9776;</div>
      </button>
    <% end %>

    <div class="topbar-title">Painel Administrativo</div>

    <div class="topbar-right">
      <div style="text-align:right;font-size:13px;">
        <% if current_administrador %>
          <div style="font-weight:700;"><%= current_administrador.nome %></div>
          <div style="font-size:11px;opacity:0.9;"><%= current_administrador.departamento %></div>
        <% else %>
          <div style="font-weight:700;">Convidado</div>
        <% end %>
      </div>

      <div class="avatar">
        <%= (current_administrador&.nome&.first || "A").upcase %>
      </div>
      
      <% if current_administrador %>
        <%= button_to admin_logout_path, method: :delete, 
            style: "background: rgba(255,255,255,0.15); border: 1px solid rgba(255,255,255,0.3); color: white; padding: 8px 12px; border-radius: 6px; cursor: pointer; display: flex; align-items: center; gap: 6px; font-size: 13px; transition: background 0.2s;",
            onmouseover: "this.style.background='rgba(255,255,255,0.25)'",
            onmouseout: "this.style.background='rgba(255,255,255,0.15)'",
            title: "Sair do sistema" do %>
          <span style="font-size: 16px;">ðŸšª</span>
          <span>Sair</span>
        <% end %>
      <% end %>
    </div>
  </div>

    <% if current_administrador %>
      <nav id="adminSidebar" class="sidebar" aria-label="Menu lateral admin">
      <a href="<%= admin_avaliacoes_path %>" class="<%= 'active' if controller_name == 'pages' && action_name == 'avaliacoes' %>">
          AvaliaÃ§Ãµes
      </a>

      <a href="<%= admin_root_path %>" class="<%= 'active' if controller_name == 'pages' && action_name == 'gerenciamento' %>">
          Gerenciamento
      </a>
      </nav>
    <% end %>


  <div class="page-wrap">
    <div id="flash-container" style="position: fixed; top: 80px; right: 20px; z-index: 4000;">
      <% flash.each do |type, message| %>
        <div class="flash <%= type %>" style="padding: 12px 20px; margin-bottom: 10px;
                    border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.2);
                    background-color: <%= type == 'notice' ? '#28a745' : '#dc3545' %>;
                    color: white; min-width: 220px; font-weight: 600;
                    transition: opacity 0.5s, transform 0.5s;
                    opacity: 1; transform: translateY(-20px);">
          <%= message %>
        </div>
      <% end %>
    </div>

    <script>
      document.addEventListener("turbo:load", () => {
        const flashes = document.querySelectorAll('#flash-container .flash');
        flashes.forEach((flash, index) => {
          setTimeout(() => { flash.style.transform = 'translateY(0)'; }, 100);

          setTimeout(() => { 
            flash.style.opacity = 0;
            flash.style.transform = 'translateY(-20px)';
          }, 4000 + index * 200);

          setTimeout(() => { flash.remove(); }, 4500 + index * 200);
        });
      });
    </script>
    <div class="content-inner">
      <%= yield %>
    </div>
  </div>

  <script>
    (function() {
      const trigger = document.getElementById('menuTrigger');
      const sidebar = document.getElementById('adminSidebar');

      if (!trigger || !sidebar) return;

      function openSidebar() {
        sidebar.classList.add('is-open');
        trigger.setAttribute('aria-expanded', 'true');
      }

      function closeSidebar() {
        sidebar.classList.remove('is-open');
        trigger.setAttribute('aria-expanded', 'false');
      }

      function toggleSidebar() {
        const isOpen = sidebar.classList.contains('is-open');
        if (isOpen) {
          closeSidebar();
        } else {
          openSidebar();
        }
      }

      trigger.addEventListener('click', toggleSidebar);

      document.addEventListener('click', (e) => {
        const clickInside = sidebar.contains(e.target) || trigger.contains(e.target);
        if (!clickInside) {
          closeSidebar();
        }
      });

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          closeSidebar();
        }
      });
    })();
  </script>

</body>
</html>
